@model LoginDTO
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Login</h3>
                </div>
                <div class="card-body p-4">
                    <form id="LoginForm" method="post" asp-action="Login" asp-controller="Account" 
                    asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" aria-required="true" placeholder="Password" type="password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>


                        <div class="d-grid mb-3">
                            <button id="LoginSubmit" type="submit" class="btn btn-primary btn-lg fw-bold">Login</button>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Home
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
                                Don't have an account? Register now!
                            </a>
                        </div>
                    </form>
                </div>
              
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}