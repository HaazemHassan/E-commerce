@model Company

<form method="post" asp-controller="Company" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Company</h2>
            <hr />
        </div>
        <input asp-for="Id" type="hidden" />
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Country" class="p-0"></label>
            <input asp-for="Country" class="form-control" disabled />
        </div>
         <div class="mb-3 row p-1">
            <label asp-for="City" class="p-0"></label>
            <input asp-for="City" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="StreetAddress" class="p-0"></label>
            <input asp-for="StreetAddress" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="State" class="p-0"></label>
            <input asp-for="State" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PostalCode" class="p-0"></label>
            <input asp-for="PostalCode" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0"></label>
            <input asp-for="PhoneNumber" class="form-control" disabled />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Company" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>

